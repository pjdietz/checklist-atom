{
    "scopeName": "text.checklist",
    "name": "Checklist",
    "fileTypes": [
        "todo",
        "checklist"
    ],
    "patterns": [
        {
            "include": "#comment"
        },
        {
            "comment": "[ ] Open Task",
            "match": "(\\[ \\])(.*?)((//|#|--\\s|\n).*)",
            "name": "keyword.task.open.checklist",
            "captures": {
                "3": {
                    "name": "comment.line.checklist"
                }
            }
        },
        {
            "comment": "[X] Completed Task",
            "match": "(\\[[Xx]\\])(.*?)((\/\/|#|--\\s|\n).*)",
            "name": "completed.task.checklist",
            "captures": {
                "3": {
                    "name": "comment.line.checklist"
                }
            }
        },
        {
            "comment": "[>] Active Task",
            "match": "(\\[>\\])(.*?)((\/\/|#|--\\s|\n).*)",
            "name": "keyword.task.active.checklist",
            "captures": {
                "3": {
                    "name": "comment.line.checklist"
                }
            }
        },
        {
            "comment": "[!] Urgent Task",
            "match": "(\\[!\\])(.*?)((\/\/|#|--\\s|\n).*)",
            "name": "keyword.todo.task.urgent",
            "captures": {
                "3": {
                    "name": "comment.line.checklist"
                }
            }
        },
        {
            "comment": "[-] Deferred Task",
            "match": "(\\[-\\])(.*?)((\/\/|#|--\\s|\n).*)",
            "name": "constant.numeric.todo.task.deferred",
            "captures": {
                "3": {
                    "name": "comment.line.checklist"
                }
            }
        }
    ],
    "repository": {
        "comment": {
            "captures": {
                "1": {
                    "name": "comment.line.number-sign.generic-config"
                },
                "2": {
                    "name": "punctuation.definition.comment.generic-config"
                },
                "3": {
                    "name": "comment.line.semi-colon.generic-config"
                },
                "4": {
                    "name": "punctuation.definition.comment.generic-config"
                }
            },
            "match": "((#).*$\\n?)|((;).*$\\n?)"
        }
    }
}
